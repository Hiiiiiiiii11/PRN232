                                                <button type="submit" class="btn btn-gradient-warning btn-sm" title="@(news.IsActive == "Active" ? "Active" : "Inactive")">
                                                    <i class="fas fa-toggle-@(news.IsActive == "Y" ? "off" : "on")"></i>
                                                    @(news.IsActive == "Active" ? "Active" : "Inactive")
                                                </button>
                                            </form>
                                            <form method="post" asp-page-handler="DeleteNews" asp-route-id="@news.NewsArticleID" class="action-form">
                                                <button type="submit" class="btn btn-gradient-danger btn-sm" onclick="return confirm('Bạn có chắc chắn muốn xóa News này?')">
                                                    <i class="fas fa-trash"></i> Xóa
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="7" class="text-center" style="padding: 3rem;">
                                        <i class="fas fa-newspaper fa-3x mb-3" style="display: block; opacity: 0.3; color: var(--text-light);"></i>
                                        <span style="color: var(--text-light);">Không có News nào</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }

        @* Categories Section *@
