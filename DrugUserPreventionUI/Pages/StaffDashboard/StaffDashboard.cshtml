        @* News Section *@
        @if (Model.CurrentSection == "news" && Model.UserCanManageNews())
        {
            <div class="glass-card section-header">
                <h1><i class="fas fa-newspaper"></i> Quản lý News</h1>
                <p>Xem và quản lý các bài viết tin tức</p>
            </div>

            <div class="glass-card">
                <h2><i class="fas fa-newspaper me-2"></i> Danh sách News</h2>

                <div class="table-container">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Tiêu đề</th>
                                <th>Category</th>
                                <th>Tác giả</th>
                                <th>Trạng thái</th>
                                <th>Ngày tạo</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.NewsArticles?.Any() == true)
                            {
                                @foreach (var news in Model.NewsArticles)
                                {
                                    <tr>
                                        <td><strong>#@news.NewsArticleID</strong></td>
                                        <td style="max-width: 250px;">
                                            <div style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap; font-weight: 600;" title="@news.Title">
                                                @news.Title
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge bg-secondary">@(news.CategoryName ?? "N/A")</span>
                                        </td>
                                        <td>@(news.AuthorName ?? "N/A")</td>
                                        <td>
                                            <span class="status-badge status-@(news.IsActive == "Y" ? "active" : "inactive")">
                                                @(news.IsActive == "Y" ? "Active" : "Inactive")
                                            </span>
                                        </td>
                                        <td>@news.CreatedAt.ToString("dd/MM/yyyy")</td>
                                        <td>
