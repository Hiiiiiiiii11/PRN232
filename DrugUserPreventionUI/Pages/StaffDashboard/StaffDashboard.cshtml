                                <input asp-for="ChangePasswordForm.ConfirmPassword" type="password" class="form-control-glass" placeholder="Nhập lại mật khẩu mới" required>
                                <span asp-validation-for="ChangePasswordForm.ConfirmPassword" class="text-danger"></span>
                            </div>
