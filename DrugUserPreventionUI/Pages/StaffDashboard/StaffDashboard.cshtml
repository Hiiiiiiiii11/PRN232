                        <form method="post" asp-page-handler="ChangePassword">
                            <div class="mb-3">
                                <label asp-for="ChangePasswordForm.OldPassword" class="form-label-glass">Mật khẩu cũ *</label>
                                <input asp-for="ChangePasswordForm.OldPassword" type="password" class="form-control-glass" placeholder="Nhập mật khẩu hiện tại" required>
                                <span asp-validation-for="ChangePasswordForm.OldPassword" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="ChangePasswordForm.NewPassword" class="form-label-glass">Mật khẩu mới *</label>
                                <input asp-for="ChangePasswordForm.NewPassword" type="password" class="form-control-glass" placeholder="Nhập mật khẩu mới" required>
                                <span asp-validation-for="ChangePasswordForm.NewPassword" class="text-danger"></span>
                            </div>
