@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        $(document).ready(function() {
            // Auto dismiss alerts after 8 seconds
            setTimeout(function() {
                $('.alert:not(.alert-warning):not(.alert-danger)').alert('close');
            }, 8000);

            // Enhance form validation
            $('form').on('submit', function(e) {
                var form = $(this);
                var isValid = true;

                // Check required fields
                form.find('input[required], select[required], textarea[required]').each(function() {
                    if (!$(this).val().trim()) {
                        isValid = false;
                        $(this).addClass('is-invalid');
                    } else {
                        $(this).removeClass('is-invalid');
                    }
                });

                if (!isValid) {
                    e.preventDefault();
                    alert('Vui lòng điền đầy đủ thông tin bắt buộc!');
                    return false;
                }

                // Add loading state to submit button
                var submitBtn = form.find('button[type="submit"]');
                var originalText = submitBtn.html();
                submitBtn.html('<i class="fas fa-spinner fa-spin me-1"></i>Đang xử lý...').prop('disabled', true);

                // Re-enable button after 10 seconds as fallback
                setTimeout(function() {
                    submitBtn.html(originalText).prop('disabled', false);
                }, 10000);
            });

            // Remove validation classes on input
            $('input, select, textarea').on('input change', function() {
                $(this).removeClass('is-invalid');
            });

            // Preview thumbnail image
            $('input[name="CourseForm.ThumbnailURL"]').on('input', function() {
                var url = $(this).val();
                var preview = $('#thumbnail-preview');
                
                if (preview.length === 0) {
                    $(this).parent().append('<div id="thumbnail-preview" class="mt-2"></div>');
                    preview = $('#thumbnail-preview');
                }
                
                if (url && url.match(/\.(jpeg|jpg|gif|png)$/)) {
                    preview.html('<img src="' + url + '" alt="Preview" class="img-thumbnail" style="max-width: 200px; max-height: 150px;">');
                } else if (url) {
                    preview.html('<small class="text-muted">URL không phải là hình ảnh hợp lệ</small>');
                } else {
                    preview.empty();
                }
            });

            // Highlight user's own courses
            $('.table tbody tr').each(function() {
                if ($(this).find('.badge:contains("Khóa học của bạn")').length > 0) {
                    $(this).addClass('table-warning');
                }
            });

            // Enhanced confirmation dialogs
            $('button[onclick*="confirm"]').on('click', function(e) {
                var action = $(this).text().trim();
                var courseName = $(this).closest('tr').find('strong').first().text();
                
                if (action.includes('Xóa')) {
                    return confirm('⚠️ XÓA KHÓA HỌC\n\nBạn có chắc muốn xóa khóa học "' + courseName + '"?\n\n❗ Hành động này KHÔNG THỂ HOÀN TÁC!\n❗ Tất cả dữ liệu liên quan sẽ bị mất!\n\nNhấn OK để xác nhận xóa.');
                }
                
                if (action.includes('Duyệt')) {
                    return confirm('✅ DUYỆT KHÓA HỌC\n\nBạn có chắc muốn duyệt khóa học "' + courseName + '"?\n\nSau khi duyệt, khóa học sẽ hiển thị công khai cho người dùng.');
                }
                
                if (action.includes('Hủy duyệt')) {
                    return confirm('❌ HỦY DUYỆT KHÓA HỌC\n\nBạn có chắc muốn hủy duyệt khóa học "' + courseName + '"?\n\nSau khi hủy duyệt, khóa học sẽ không hiển thị công khai.');
                }
            });

            // Role-based UI enhancements
            var userRole = '@userRole';
            
            if (userRole === 'Consultant') {
                // Highlight consultant's courses
                $('.table tbody tr').each(function() {
                    if ($(this).find('small:contains("(Bạn)")').length > 0) {
                        $(this).addClass('border-start border-primary border-3');
                    }
                });
            }
            
            // Add tooltips for buttons
            $('[title]').tooltip();
        });
    </script>
