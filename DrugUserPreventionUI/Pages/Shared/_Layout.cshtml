            border-bottom: 1px solid #e2e8f0;
            border-radius: var(--border-radius) var(--border-radius) 0 0 !important;
            font-weight: 600;
            color: var(--dark-color);
        }

        /* ✅ Enhanced Buttons */
        .btn {
