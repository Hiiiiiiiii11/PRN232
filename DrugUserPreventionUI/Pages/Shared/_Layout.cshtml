            border-left: 4px solid;
        }

        .alert-success {
            background-color: #ecfdf5;
            color: #065f46;
            border-left-color: var(--success-color);
        }

        .alert-danger {
            background-color: #fef2f2;
            color: #991b1b;
            border-left-color: var(--danger-color);
        }

        .alert-info {
            background-color: #eff6ff;
            color: #1e40af;
            border-left-color: var(--info-color);
        }

        .alert-warning {
            background-color: #fffbeb;
            color: #92400e;
            border-left-color: var(--warning-color);
        }

        /* ✅ Enhanced Footer */
        .footer {
            background: linear-gradient(135deg, var(--dark-color) 0%, #374151 100%);
            color: rgba(255, 255, 255, 0.8);
            margin-top: 3rem;
            padding: 2rem 0;
        }

        .footer a {
            color: rgba(255, 255, 255, 0.9);
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .footer a:hover {
            color: var(--primary-color);
        }

        /* ✅ Loading Animation */
        .loading {
            position: relative;
            overflow: hidden;
        }

        .loading::after {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
            animation: loading 1.5s infinite;
        }

        keyframes loading {
            0% {
                left: -100%;
            }
            100% {
                left: 100%;
            }
        }

        /* ✅ Custom Scrollbar */
        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-track {
            background: #f1f5f9;
        }

        ::-webkit-scrollbar-thumb {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            border-radius: 4px;
        }

        ::-webkit-scrollbar-thumb:hover {
            background: linear-gradient(135deg, var(--secondary-color), var(--primary-color));
        }

        /* ✅ Responsive Design */
        media (max-width: 768px) {
            .container-fluid {
                padding: 0 1rem;
            }

            .table-responsive {
                font-size: 0.875rem;
            }

            .btn-group {
                flex-direction: column;
            }

            .btn-group .btn {
                margin: 2px 0;
                width: 100%;
            }

            .user-info {
                margin-top: 0.5rem;
            }

            .main-content.with-sidebar {
                margin-left: 0;
            }

            .dashboard-sidebar {
                width: 100%;
            }
        }

        media (min-width: 769px) {
            .dashboard-sidebar {
                transform: translateX(0);
            }
            
            .sidebar-toggle {
                display: none;
            }
        }
    </style>
</head>
<body>
    @{
        // ✅ ADDED: Get user info from JWT token for role-based navigation
        DrugUserPreventionUI.Pages.UserInfoDto currentUser = null;
        string displayName = "Guest";
        string userRole = "Guest";
        bool isAuthenticated = false;

        try
        {
            var token = Context.Request.Cookies["auth_token"];
            if (!string.IsNullOrEmpty(token))
            {
                var handler = new System.IdentityModel.Tokens.Jwt.JwtSecurityTokenHandler();
                if (handler.CanReadToken(token))
                {
                    var jsonToken = handler.ReadJwtToken(token);

                    // Check if token is not expired
                    if (jsonToken.ValidTo > DateTime.UtcNow)
                    {
                        isAuthenticated = true;
                        currentUser = new DrugUserPreventionUI.Pages.UserInfoDto();

                        foreach (var claim in jsonToken.Claims)
                        {
                            switch (claim.Type)
                            {
                                case "sub":
                                case "userid":
                                case "id":
                                case "nameid":
                                case "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/nameidentifier":
                                    if (int.TryParse(claim.Value, out var userId))
                                        currentUser.UserId = userId;
                                    break;
                                case "unique_name":
                                case "username":
                                case "name":
                                case "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/name":
                                    currentUser.UserName = claim.Value;
                                    break;
                                case "email":
                                    currentUser.Email = claim.Value;
                                    break;
                                case "role":
                                case "http://schemas.microsoft.com/ws/2008/06/identity/claims/role":
                                    var normalizedRole = claim.Value?.Trim().ToLower();
                                    userRole = normalizedRole switch
                                    {
                                        "admin" or "administrator" => "Admin",
                                        "manager" or "quản lý" => "Manager",
                                        "consultant" or "chuyên viên tư vấn" or "tư vấn viên" => "Consultant",
                                        "staff" or "nhân viên" => "Staff",
                                        "member" or "thành viên" => "Member",
                                        _ => "Guest"
                                    };
                                    currentUser.Role = userRole;
                                    break;
                                case "fullname":
                                case "given_name":
                                case "family_name":
                                    currentUser.FullName = claim.Value;
                                    break;
                            }
                        }

                        currentUser.Expiration = jsonToken.ValidTo;
                        displayName = currentUser.FullName ?? currentUser.UserName ?? "User";
                    }
                }
            }
        }
        catch (Exception)
        {
            // If any error occurs, treat as guest
            isAuthenticated = false;
            userRole = "Guest";
            displayName = "Guest";
            currentUser = null;
        }

        // Role permissions
        bool isAdmin = userRole == "Admin";
        bool isManager = userRole == "Manager";
        bool isConsultant = userRole == "Consultant";
        bool isStaff = userRole == "Staff";
        bool isMember = userRole == "Member";
        bool isGuest = userRole == "Guest" || !isAuthenticated;
        
        // Check if current page should show sidebar
        bool showSidebar = isAuthenticated && (isManager || isStaff || isConsultant || isMember);
        string currentPage = ViewContext.RouteData.Values["page"]?.ToString() ?? "";
        bool isDashboardPage = currentPage.Contains("Dashboard") || currentPage.Contains("Management") || currentPage.Contains("MyCourses") ||currentPage.Contains("MyPrograms") || currentPage.Contains("CourseDashboard") || currentPage.Contains("MyNewsArticle");
    }

