@page "/Register"
@model DrugUserPreventionUI.Pages.RegisterModel
@{
    ViewData["Title"] = "Đăng ký";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container-fluid min-vh-100 d-flex align-items-center justify-content-center bg-gradient">
    <div class="row w-100 justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <i class="fas fa-user-plus fa-3x text-success mb-3"></i>
                        <h3 class="card-title mb-1">Tạo tài khoản</h3>
                        <p class="text-muted">Đăng ký để truy cập hệ thống</p>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Message))
                    {
                        <div class="alert alert-@(Model.MessageType) alert-dismissible fade show" role="alert">
                            <i class="fas fa-info-circle me-2"></i> @Model.Message
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="RegisterForm.FullName" class="form-label">Họ và tên</label>
                            <input asp-for="RegisterForm.FullName" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="RegisterForm.Email" class="form-label">Email</label>
                            <input asp-for="RegisterForm.Email" class="form-control" type="email" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="RegisterForm.Username" class="form-label">Tên đăng nhập</label>
                            <input asp-for="RegisterForm.Username" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="RegisterForm.Password" class="form-label">Mật khẩu</label>
                            <input asp-for="RegisterForm.Password" class="form-control" type="password" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="RegisterForm.Phone" class="form-label">Số điện thoại</label>
                            <input asp-for="RegisterForm.Phone" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="RegisterForm.DateOfBirth" class="form-label">Ngày sinh</label>
                            <input asp-for="RegisterForm.DateOfBirth" class="form-control" type="date" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="RegisterForm.Gender" class="form-label">Giới tính</label>
                            <select asp-for="RegisterForm.Gender" class="form-control">
                                <option>Male</option>
                                <option>Female</option>
                                <option>Other</option>
                            </select>
                        </div>

                        <input type="hidden" asp-for="RegisterForm.Role" value="Member" />

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-user-plus me-2"></i> Đăng ký
                            </button>
                        </div>
                    </form>

                    <div class="mt-3 text-center">
                        <small class="text-muted">Đã có tài khoản? <a href="/Login" class="text-primary">Đăng nhập</a></small>
                    </div>
                </div>
            </div>

            <div class="text-center mt-3">
                <small class="text-white-50">
                    © 2025 Drug User Prevention System. All rights reserved.
                </small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
