                        </div>
                        <div class="card-body">
                            <canvas id="coursesChart" height="300"></canvas>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h6 class="mb-0">Biểu đồ đăng ký khóa học</h6>
                        </div>
                        <div class="card-body">
                            <canvas id="registrationsChart" height="300"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
